<p>
<% if user_signed_in? %>
  <div class="">
    <%= link_to "Create My Topic", new_topic_path, class: 'navbar-link' %>
  </div>

  <p id="notice"><%= notice %></p>

  <h1>Questions</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @questions.each_with_index do |question, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to question.text, question, class: 'question' %></td>

        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'New Topic', new_topic_path %>

<% end %>


